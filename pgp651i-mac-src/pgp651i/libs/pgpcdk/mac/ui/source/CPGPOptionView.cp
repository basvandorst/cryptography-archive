ate	mSavePort( UQDGlobals::GetCurrentPort() );	CPGPOptionView		*optionView;		SetDefaultView( inSuperView );		optionView = (CPGPOptionView *) UReanimator::ReadObjects(			'PPob', ppobResID );	optionView->FinishCreate();		OutOfFocus( NULL );		return ( optionView );}