#include <stdio.h>

int freq[256] = { 0 };

main()
{	int c;

	while((c = getchar()) != EOF)
	{	freq[c]++;
	}
	for(c = 'a'; c <= 'z'; c++)
	{	printf("%d\t%c\n", freq[c], c);
	}
}
